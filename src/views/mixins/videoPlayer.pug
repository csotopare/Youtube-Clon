mixin videoPlayer(video = {})
   .videoPlayer#jsVideoPlayer
      video(src=video.src)
      .videoPlayer__controls
         videoPlayer__Column
            span#jsVolumeButton
               i.fas.fa-volume-up
            span
               span#currentTime 00:00:00
               |/
               span#totalTime 00:00:00
            input.videoPlayer__volume#jsVolume(type='range' min='0' max='1' value='1' step='0.1') 
         videoPlayer__Column
            span#jsPLayButton
               i.fas.fa-play
         videoPlayer__Column
            span#jsFullScreen
               i.fas.fa-expand
